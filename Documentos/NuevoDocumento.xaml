<Window x:Class="Documentos.NuevoDocumento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Documentos"
        mc:Ignorable="d"
        x:Name="Doc"
        Icon="DocumentX.ico"
        SizeToContent="WidthAndHeight"
        Title="NuevoDocumento" Height="500" Width="500" Closing="Doc_Closing">
    <DockPanel>
        <Button x:Name="GuardarButton" Margin="10" DockPanel.Dock="Bottom" Content="Guardar" Click="GuardarButton_Click" />
        <TextBox x:Name="ContenidoDocumento" AcceptsReturn="True" />
    </DockPanel>
</Window>
